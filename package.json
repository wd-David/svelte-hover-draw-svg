{
	"name": "svelte-hover-draw-svg",
	"version": "2.0.4",
	"description": "A lightweight Svelte component to draw SVG on hover.",
	"author": "Peng Wei Che",
	"repository": "https://github.com/davipon/svelte-hover-draw-svg",
	"bugs": "https://github.com/davipon/svelte-hover-draw-svg/issues",
	"license": "MIT",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync && husky install",
		"test": "playwright test --update-snapshots",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"cz": "cz",
		"format": "prettier --write --plugin-search-dir=. .",
		"ci": "pnpm format && pnpm lint && pnpm test && pnpm check",
		"release": "standard-version --no-verify",
		"release:patch": "standard-version --no-verify --release-as patch"
	},
	"devDependencies": {
		"@commitlint/cli": "17.0.3",
		"@commitlint/config-conventional": "17.0.3",
		"@commitlint/cz-commitlint": "17.0.3",
		"@playwright/test": "1.23.1",
		"@sveltejs/adapter-auto": "1.0.0-next.52",
		"@sveltejs/kit": "1.0.0-next.355",
		"@typescript-eslint/eslint-plugin": "5.30.0",
		"@typescript-eslint/parser": "5.30.0",
		"commitizen": "4.2.4",
		"eslint": "8.18.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-svelte3": "4.0.0",
		"husky": "8.0.1",
		"inquirer": "8.2.4",
		"lint-staged": "13.0.3",
		"prettier": "2.7.1",
		"prettier-plugin-svelte": "2.7.0",
		"standard-version": "9.5.0",
		"svelte": "3.48.0",
		"svelte-check": "2.8.0",
		"svelte-preprocess": "4.10.7",
		"svelte2tsx": "0.5.11",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"type": "module",
	"keywords": [
		"svelte",
		"svg",
		"animation",
		"component"
	]
}
